{
    "app-id" : "org.gnome.IconPreview",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.30",
    "sdk" : "org.gnome.Sdk",
    "command" : "gnome-icon-preview",
    "finish-args" : [
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=home",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/lib/cmake",
        "/share/pkgconfig",
        "/share/aclocal",
        "/man",
        "/share/man",
        "/share/gtk-doc",
        "/share/vala",
        "/share/bash-completions",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "libdazzle",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://ftp.gnome.org/pub/GNOME/sources/libdazzle/3.30/libdazzle-3.30.2.tar.xz",
                    "sha256" : "78770eae9fa15ac5acb9c733d29459330b2540affbf72933119e36dbd90b36d5"
                }
            ]
        },
        {
            "name" : "icon-preview",
            "buildsystem" : "meson",
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://gitlab.gnome.org/ZanderBrown/icon-tool.git",
                    "tag" : "0.9.0",
                    "commit" : "9e9fd1bf76f55d241dccb8c3b89e16f5c19807cd"
                }
            ]
        }
    ]
}
